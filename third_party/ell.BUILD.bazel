load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "all",
    srcs = glob(["**"]),
)

configure_make(
    name = "ell",
    lib_source = ":all",
    autogen = True,
    autogen_command = "bootstrap",
    configure_in_place = True,
    configure_options = [
        "--disable-shared",
        "--enable-static",
        "--disable-tests",
        "--disable-tools",
        "--disable-examples",
    ],
    out_static_libs = ["libell.a"],
    visibility = ["//visibility:public"],
)
