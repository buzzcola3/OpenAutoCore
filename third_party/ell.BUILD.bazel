load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "all",
    srcs = glob(["**"]),
)

config_setting(
    name = "arm64_gnu",
    constraint_values = [
        "@platforms//cpu:aarch64",
    ],
    values = {"define": "libc=gnu"},
)

config_setting(
    name = "amd64_gnu",
    constraint_values = [
        "@platforms//cpu:x86_64",
    ],
    values = {"define": "libc=gnu"},
)

config_setting(
    name = "arm64_musl",
    constraint_values = [
        "@platforms//cpu:aarch64",
    ],
    values = {"define": "libc=musl"},
)

config_setting(
    name = "amd64_musl",
    constraint_values = [
        "@platforms//cpu:x86_64",
    ],
    values = {"define": "libc=musl"},
)

configure_make(
    name = "ell",
    lib_source = ":all",
    autogen = True,
    autogen_command = "bootstrap",
    configure_in_place = True,
    configure_options = [
        "--disable-shared",
        "--enable-static",
        "--disable-tests",
        "--disable-tools",
        "--disable-examples",
    ] + select({
        ":arm64_gnu": ["--host=aarch64-linux-gnu"],
        ":amd64_gnu": ["--host=x86_64-linux-gnu"],
        ":arm64_musl": ["--host=aarch64-linux-musl"],
        ":amd64_musl": ["--host=x86_64-linux-musl"],
        "//conditions:default": [],
    }),
    out_static_libs = ["libell.a"],
    visibility = ["//visibility:public"],
)
